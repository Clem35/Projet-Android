<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Background" >

    <!-- STATUS BAR -->

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/StatusBar" >

        <ImageView style="@style/RetourHome" />

        <LinearLayout style="@style/BarStatusBar" />

        <TextView
            android:id="@+id/text_bar_Volet"
            style="@style/TextStatusBar"
            android:text="@string/Volet"
            tools:context=".MainActivity" />

        <LinearLayout style="@style/BarStatusBar" />
    </LinearLayout>

    <!-- BODY -->

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/ActionBar" >

        <ImageView
            android:id="@+id/ImageTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_weight="0"
            android:src="@drawable/lamp" />

        <TextView
            android:id="@+id/ac_volet_state"
            android:layout_width="145dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_weight="0"
            android:gravity="center"
            android:text="@string/volet_state"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#2d4d70" />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0" >

            <RadioButton
                android:id="@+id/radio0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="0%" />

            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50%" />

            <RadioButton
                android:id="@+id/radio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100%" />
        </RadioGroup>

        <ImageView
            android:id="@+id/Image_Edit_Intensite"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.77"
            android:background="@null"
            android:clickable="true"
            android:onClick="onClick_Edit_Volet"
            android:src="@drawable/custom_btn" />
    </LinearLayout>

    <!-- BAS DE PAGE -->
    <!-- BAS DE PAGE -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom" >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/android" />
    </LinearLayout>

</LinearLayout>